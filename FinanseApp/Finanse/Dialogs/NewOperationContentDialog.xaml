            </RadioButton>

            <RadioButton
                Grid.Column="1"
                Name="Income_RadioButton"
                GroupName="OperationType_RadioButtons"
                Tag="Wpływ"
                Checked="TypeOfOperationRadioButton_Checked"
                Style="{StaticResource RadioButtonWithIconStyle}">
                <Canvas
                    Width="32"
                    Height="32">
