            </RadioButton>
        </Grid>

        <TextBox
            Name="NameValue"
            Style="{StaticResource TextBoxStyle1}"
            PlaceholderText="Nazwa"
            x:Uid="namePlaceholder"
            Margin="0,20,0,0"
            DataContextChanged="NameValue_DataContextChanged" />

        <TextBox
            Name="CostValue"
            Style="{StaticResource TextBoxStyle1}"
            PlaceholderText="Wartość"
            x:Uid="valuePlaceholder"
            InputScope="CurrencyAmount"
            Margin="0,20,0,10"
            GotFocus="CostValue_GotFocus"
            LostFocus="CostValue_LostFocus"
            TextChanging="CostValue_TextChanging"
            SelectionChanged="CostValue_SelectionChanged"
            TextChanged="CostValue_TextChanged" />

        <CalendarDatePicker
            Name="DateValue"
            Style="{StaticResource CalendarDatePickerStyle1}"
            PlaceholderText="Data"
            x:Uid="datePlaceholder"
            Margin="0,10"
            HorizontalAlignment="Stretch"
            Closed="DateValue_Closed"
            IsTodayHighlighted="False"
            DataContextChanged="DateValue_DataContextChanged" />

        <ComboBox
            Name="CategoryValue"
            Style="{StaticResource ComboBoxStyle1}"
            SelectionChanged="ComboBox_SelectionChanged"
            x:Uid="categoryPlaceholder"
            SelectedValuePath="ID"
            PlaceholderText="Kategoria"
            Margin="0,10"
            HorizontalAlignment="Stretch"
            DataContextChanged="CategoryValue_DataContextChanged" />

        <ComboBox
            Name="SubCategoryValue"
            Style="{StaticResource ComboBoxStyle1}"
            PlaceholderText="Podkategoria"
            x:Uid="subCategoryPlaceholder"
            Margin="0,10"
            HorizontalAlignment="Stretch"
            SelectionChanged="SubCategoryValue_SelectionChanged"
            DataContextChanged="SubCategoryValue_DataContextChanged" />

        <ComboBox
            Name="PayFormValue"
            Style="{StaticResource ComboBoxStyle1}"
            PlaceholderText="Forma płatności"
            x:Uid="moneyAccountPlaceholder"
            Margin="0,10"
            HorizontalAlignment="Stretch"
            DataContextChanged="PayFormValue_DataContextChanged">
        </ComboBox>
       
        <TextBox
            Name="MoreInfoValue"
            MaxWidth="{ThemeResource ContentDialogMinWidth}"
            TextWrapping="Wrap"
            BorderThickness="1"
            PlaceholderText="Więcej informacji"
            x:Uid="moreInfoPlaceholder"
            Style="{StaticResource TextBoxStyle1}"
            Height="100"
            Margin="0,10"
            DataContextChanged="MoreInfoValue_DataContextChanged" />

        <TextBlock
            Name="SaveAsAssetTitle"
            Text="Zapisz jako szablon"
            x:Uid="saveAsAsset"
            Margin="0,20,0,0" />

        <ToggleSwitch
            Name="SaveAsAssetToggle"
            Style="{StaticResource ToggleSwitchStyle1}"
            Margin="0,5,0,0">

            <ToggleSwitch.OffContent>
                <TextBlock Text="Nie" x:Uid="no" />
            </ToggleSwitch.OffContent>

            <ToggleSwitch.OnContent>
                <TextBlock Text="Tak" x:Uid="yes" />
            </ToggleSwitch.OnContent>

        </ToggleSwitch>

    </StackPanel>

</ContentDialog>
