                    Name="ByCategoryRadioButton"
                    GroupName="GroupingRadioButtons"
                    Checked="ByCategoryRadioButton_Checked"
                    Grid.Column="1"
                    FontSize="13"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource Text-1}"
                    Content="Wg. kategorii" />
            </Grid>
