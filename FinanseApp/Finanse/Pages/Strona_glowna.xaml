        <Grid
            Background="{ThemeResource AccentColor}"
            Height="48">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Orientation="Horizontal">
                <Button
                    x:Name="PrevMonthButton"
                    Width="32"
                    Margin="8,0,0,0"
                    Padding="0"
                    Foreground="{ThemeResource AccentText}"
                    Click="PreviousMonthButton_Click"
                    Background="Transparent">
                    <FontIcon
                        FontSize="16"
                        Glyph=""
                        FontFamily="{StaticResource FontAwesome}"/>
                </Button>

                <Grid>
                    <Button
                        Margin="0"
                        Padding="0"
                        Background="Transparent"
                        Width="32"
                        x:Name="IncomingOperationsButton"
                        Foreground="{ThemeResource AccentText}"
                        Click="IncomingOperationsButton_Click">
                        <FontIcon
                            FontSize="16"
                            Glyph=""
                            FontFamily="{StaticResource FontAwesome}" />
                    </Button>

                    <Button
                        Margin="0"
                        Padding="0"
                        Background="Transparent"
                        Width="32"
                        x:Name="NextMonthButton"
                        Foreground="{ThemeResource AccentText}"
                        Click="NextMonthButton_Click">
                        <FontIcon
                            FontSize="16"
                            Glyph=""
                            FontFamily="{StaticResource FontAwesome}" />
                    </Button>
                </Grid>

                <TextBlock
                    HorizontalAlignment="Center"
                    Margin="8,0,0,0"
                    x:Name="ActualMonthText"
                    Text="Wrzesień"
                    Style="{StaticResource PageTitleStyle}" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">
                <TextBlock
                    VerticalAlignment="Center"
                    Name="ActualMoneyBar"
                    Foreground="{ThemeResource AccentText}"
                    FontWeight="Bold"
                    FontSize="13" />
                <Button
                    Margin="11,0,16,0"
                    Padding="5"
                    Background="Transparent"
                    VerticalAlignment="Center">
                    <Button.Content>
                        <FontIcon
                            Foreground="{ThemeResource AccentText}"
                            Opacity="0.5"
                            FontSize="13"
                            Glyph="" />
                    </Button.Content>
                    <Button.Flyout>
                        <MenuFlyout
                            x:Name="VisiblePayFormMenuFlyout"
                            Placement="Bottom">
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style
                                    TargetType="MenuFlyoutPresenter">
                                    <Setter
                                        Property="BorderThickness"
                                        Value="0" />
                                    <Setter
                                        Property="Background"
                                        Value="{ThemeResource Background-1Transparent}" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

        </Grid>
        
        <Grid
            Background="{ThemeResource Background-1}"
            Grid.Row="1"
            Height="48">
            <Grid
                MaxWidth="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <RadioButton
