        <ItemsPanelTemplate
            x:Name="ByDateGroupItemsPanelTemplate">
            <WrapGrid
                MaximumRowsOrColumns="7"
                Orientation="Horizontal"
                HorizontalChildrenAlignment="Center"
                VerticalChildrenAlignment="Center">
            </WrapGrid>
        </ItemsPanelTemplate>

        <DataTemplate
            x:Name="ByDateGroupItemTemplate">
            <!--Text="{Binding Group.dayNum}"-->
            <StackPanel
                Orientation="Horizontal"
                Margin="16,0,0,5">
                <StackPanel
                    Width="48">
                    <TextBlock
                        Text="{Binding Group.Key.dayNum}"
                        FontSize="30"
                        Foreground="{ThemeResource Text-1}"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel
                    VerticalAlignment="Center"
                    Margin="16,0,0,0">
                    <TextBlock
                        Foreground="{ThemeResource Text-1}"
                        Text="{Binding Group.Key.day}"
                        FontSize="12" />
                    <TextBlock
                        Text="{Binding Group.Key.month}"
                        FontSize="12"
                        Foreground="{ThemeResource Text-2}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <ItemsPanelTemplate
            x:Name="ByCategoryGroupItemsPanelTemplate">
        </ItemsPanelTemplate>

        <GroupStyle
            x:Name="ByCategoryGroupStyle">
            <GroupStyle.Panel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel
                        Margin="0"
                        GroupPadding="0" />
                </ItemsPanelTemplate>
            </GroupStyle.Panel>
            <GroupStyle.HeaderContainerStyle>
                <Style
                    TargetType="ListViewHeaderItem">
                    <Setter
                        Property="Template">
                        <Setter.Value>
                            <ControlTemplate
                                TargetType="ListViewHeaderItem">

                                <ContentPresenter
                                    x:Name="ContentPresenter"
                                    Margin="0"
                                    Padding="0"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    ContentTransitions="{TemplateBinding ContentTransitions}"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GroupStyle.HeaderContainerStyle>
            <GroupStyle.HeaderTemplate>
                <DataTemplate>

                    <Grid
                        Background="Transparent"
                        MaxWidth="620"
                        Margin="0,20,0,0">
                        <Grid
                            Margin="0,5"
                            MaxWidth="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="*" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0">
                                <Grid
                                    Width="50"
                                    Height="30">
                                    <FontIcon
                                        Grid.Column="0"
                                        Foreground="{ThemeResource Text-2}"
                                        FontFamily="{Binding Key.iconStyle}"
                                        Glyph="{Binding Key.icon}"
                                        FontSize="16" />
                                </Grid>

                                <TextBlock
                                    Foreground="{ThemeResource Text-1}"
                                    Margin="15,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Key.name}"
                                    FontSize="13" />

                            </StackPanel>

                            <TextBlock
                                VerticalAlignment="Center"
                                Grid.Column="2"
                                Name="SumText"
                                HorizontalAlignment="Right"
                                Text="{Binding cost}"
                                Foreground="{ThemeResource Text-1}"
                                FontWeight="Bold"
                                FontSize="13"
                                Margin="16,0" />
                        </Grid>

                        <Border
                            Grid.ColumnSpan="3"
                            Opacity="0.3"
                            BorderBrush="{ThemeResource Text-2}"
                            BorderThickness="0,0,0,1" />

                    </Grid>

                </DataTemplate>
            </GroupStyle.HeaderTemplate>
        </GroupStyle>

        <DataTemplate
            x:Name="ByCategoryGroupItemTemplate">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">
                <Grid
                    Width="50"
                    Height="50">
                    <Rectangle
                        RadiusX="5"
                        RadiusY="5"
                        Fill="{Binding Group.Key.color}" />
                    <FontIcon
                        Grid.Column="0"
                        FontFamily="Segoe UI"
                        Glyph="{Binding Group.Key.icon}"
                        FontSize="24" />
                </Grid>

                <TextBlock
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Text="{Binding Group.Key.name}"
                    FontSize="16" />

            </StackPanel>
        </DataTemplate>

        <CollectionViewSource
            x:Name="ContactsCVS"
            Source="{Binding groupsByDay, Mode=OneWay}"
            IsSourceGrouped="True" />
        <CollectionViewSource
            x:Name="CategorizedCVS"
            IsSourceGrouped="True" />

        <local:EmptyOrFullSelector
            Full="{StaticResource JumpListGroupTemplate}"
            Empty="{StaticResource JumptListEmptyTemplate}"
            x:Name="GroupEmptyOrFullSelector" />

        <DataTemplate
            x:Key="JumpListGroupTemplate">
            <Border
                Margin="8"
                Width="24"
                Height="24">
                <TextBlock
                    Text="{Binding Day}"
                    Foreground="{ThemeResource Text}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>
        </DataTemplate>
        <DataTemplate
            x:Key="JumptListEmptyTemplate">
            <Border
                Margin="8"
                Width="24"
                Height="24">
                <TextBlock
                    Text="{Binding Day}"
                    Foreground="{ThemeResource Text-2}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>
        </DataTemplate>

    </Page.Resources>

    <Grid
