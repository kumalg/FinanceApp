                    GroupName="GroupingRadioButtons"
                    Checked="ByDateRadioButton_Checked"
                    FontSize="13"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource Text-1}"
                    Content="Wg. daty" />
