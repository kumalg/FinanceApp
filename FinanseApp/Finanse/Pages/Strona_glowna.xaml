        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        
        <Grid
            Background="{ThemeResource AccentColor}"
            Height="48">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>

            <AppBarButton
                x:Name="PrevMonthButton"
                Icon="Back"
                Width="48"
                Foreground="{ThemeResource AccentText}"
                Click="PreviousMonthButton_Click" />

            <TextBlock
                HorizontalAlignment="Center"
                Grid.Column="1"
                x:Name="ActualMonthText"
                Text="Wrzesień"
                Style="{StaticResource PageTitleStyle}"
                Margin="0" />

            <AppBarButton
                Grid.Column="2"
                Width="48"
                x:Name="NextMonthButton"
                Icon="Forward"
                Foreground="{ThemeResource AccentText}"
                Click="NextMonthButton_Click" />
            <!--
            <StackPanel
                Name="UpperCommandBar"
                Orientation="Horizontal"
                Grid.Column="2">

                <AppBarButton
                    Icon="Add"
                    IsCompact="True"
                    Label="Nowa operacja"
                    Foreground="{ThemeResource AccentText}"
                    Click="NowaOperacja_Click" />

            </StackPanel>
            -->
        </Grid>
        
        <StackPanel
            Height="48"
            Orientation="Horizontal"
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Canvas.ZIndex="1">
            <TextBlock
                VerticalAlignment="Center"
                Name="ActualMoneyBar"
                Foreground="{ThemeResource Text-1}"
                FontWeight="Bold"
                FontSize="14" />
            <Button
                Margin="11,0"
                Padding="5"
                Background="Transparent"
                VerticalAlignment="Center">
                <Button.Content>
                    <FontIcon
                        Foreground="{ThemeResource Text-1}"
                        Opacity="0.5"
                        FontSize="13"
                        Glyph="" />
                </Button.Content>
                <Button.Flyout>
                    <MenuFlyout
                        Placement="Bottom">
                        <MenuFlyout.MenuFlyoutPresenterStyle>
                            <Style
                                TargetType="MenuFlyoutPresenter">
                                <Setter
                                    Property="BorderThickness"
                                    Value="0" />
                                <Setter
                                    Property="Background"
                                    Value="{ThemeResource Background-1Transparent}" />
                            </Style>
                        </MenuFlyout.MenuFlyoutPresenterStyle>
                        <ToggleMenuFlyoutItem
                            Text="Wszystko" />
                        <ToggleMenuFlyoutItem
                            Text="Gotówka" />
                        <ToggleMenuFlyoutItem
                            Text="Karta Visa" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
        
        <Pivot
            Grid.Row="1"
            Grid.RowSpan="2"
            Style="{StaticResource PivotStyle}">

            <Pivot.Resources>
                <Style
                    TargetType="PivotHeaderItem"
                    BasedOn="{StaticResource PivotHeaderItemStyle}" />
            </Pivot.Resources>

            <PivotItem
                Margin="0"
                GotFocus="PivotItem_GotFocus">
                <PivotItem.Header>
                    <data:PivotHeader
                        Label="Operacje wg. daty"
                        Glyph="" />
                </PivotItem.Header>

                <SemanticZoom>
                    <SemanticZoom.ZoomedInView>
                        <ListView
                            Padding="0,-10,0,0"
                            Name="OperacjeListView"
                            ItemsSource="{Binding Source={StaticResource ContactsCVS}, Mode=TwoWay}"
                            SelectionMode="Single"
                            BorderThickness="0"
                            Background="Transparent"
                            SelectionChanged="OperacjeListView_SelectionChanged">

                            <ListView.ItemContainerStyle>
                                <Style
                                    TargetType="ListViewItem">
                                    <Setter
                                        Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                    <Setter
                                        Property="Padding"
                                        Value="0" />
                                    <Setter
                                        Property="MaxWidth"
                                        Value="620" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate
                                    x:DataType="models:Operation">

                                    <Grid
                                        Background="Transparent"
                                        RightTapped="Grid_RightTapped"
                                        DragStarting="Grid_DragStarting">

                                        <FlyoutBase.AttachedFlyout>

                                            <MenuFlyout
                                                MenuFlyoutPresenterStyle="{StaticResource MyMenyFlyoutPresenter}">

                                                <MenuFlyoutItem
                                                    x:Name="DetailsButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xEA55;"
                                                    Text="Szczegóły"
                                                    Click="DetailsButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="EditButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE104;"
                                                    Text="Edytuj"
                                                    Click="EditButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="DeleteButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE107;"
                                                    Text="Usuń"
                                                    Click="DeleteButton_Click" />

                                            </MenuFlyout>

                                        </FlyoutBase.AttachedFlyout>
                                        <StackPanel
                                            Background="Transparent">
                                            <data:OperationTemplate />
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.GroupStyle>
                                <GroupStyle
                                    HidesIfEmpty="True">
                                    <GroupStyle.HeaderContainerStyle>
                                        <Style
                                            TargetType="ListViewHeaderItem">
                                            <Setter
                                                Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate
                                                        TargetType="ListViewHeaderItem">

                                                        <ContentPresenter
                                                            x:Name="ContentPresenter"
                                                            Padding="0,15,0,0"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.HeaderContainerStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>

                                            <Grid
                                                Background="Transparent"
                                                MaxWidth="620">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition
                                                        Width="Auto" />
                                                    <ColumnDefinition
                                                        Width="*" />
                                                    <ColumnDefinition
                                                        Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel
                                                    Orientation="Horizontal"
                                                    Margin="16,0,0,5">
                                                    <StackPanel
                                                        Width="48">
                                                        <TextBlock
                                                            Text="{Binding dayNum}"
                                                            FontSize="30"
                                                            Foreground="{ThemeResource Text-1}"
                                                            FontWeight="SemiLight"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </StackPanel>
                                                    <StackPanel
                                                        VerticalAlignment="Center"
                                                        Margin="16,0,0,0">
                                                        <TextBlock
                                                            Foreground="{ThemeResource Text-1}"
                                                            Text="{Binding day}"
                                                            FontSize="12" />
                                                        <TextBlock
                                                            Text="{Binding month}"
                                                            FontSize="12"
                                                            Foreground="{ThemeResource Text-2}" />
                                                    </StackPanel>
                                                </StackPanel>

                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Grid.Column="2"
                                                    Name="SumText"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding cost}"
                                                    FontWeight="Bold"
                                                    Foreground="{ThemeResource Text-1}"
                                                    FontSize="13"
                                                    Margin="16,0" />

                                                <Border
                                                    Grid.ColumnSpan="3"
                                                    Opacity="0.3"
                                                    BorderBrush="{ThemeResource Text-2}"
                                                    BorderThickness="0,0,0,1" />
                                            </Grid>

                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </SemanticZoom.ZoomedInView>

                    <SemanticZoom.ZoomedOutView>
                        <GridView
                            Name="OperacjeListViewGroup"
                            ItemsSource="{x:Bind ContactsCVS.View.CollectionGroups}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectionMode="None"
                            ItemTemplateSelector="{StaticResource GroupEmptyOrFullSelector}"
                            DataContextChanged="ListView_DataContextChanged">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid
                                        MaximumRowsOrColumns="7"
                                        Orientation="Horizontal"
                                        HorizontalChildrenAlignment="Center"
                                        VerticalChildrenAlignment="Center">
                                    </WrapGrid>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Group.dayNum}"
                                        FontSize="30"
                                        FontWeight="SemiLight"
                                        VerticalAlignment="Center" />
                                    <!--<StackPanel
                                        Orientation="Horizontal"
                                        Margin="0,10">
                                        <TextBlock
                                            Text="{Binding Group.dayNum}"
                                            FontSize="30"
                                            FontWeight="SemiLight"
                                            VerticalAlignment="Center" />
                                        <StackPanel
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0">
                                            <TextBlock
                                                Text="{Binding Group.day}"
                                                FontSize="12" />
                                            <TextBlock
                                                Text="{Binding Group.month}"
                                                FontSize="12"
                                                Opacity="0.4" />
                                        </StackPanel>
                                    </StackPanel>-->
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>

            </PivotItem>

            <PivotItem
                Margin="0">
                <PivotItem.Header>
                    <data:PivotHeader
                        Label="Operacje wg. kategorii"
                        Glyph="" />
                </PivotItem.Header>
                <SemanticZoom>
                    <SemanticZoom.ZoomedInView>
                        <ListView
                            Padding="0,-10,0,48"
                            Name="OperacjeListViewCategorized"
                            ItemsSource="{x:Bind CategorizedCVS.View}"
                            SelectionMode="Single"
                            BorderThickness="0"
                            Background="Transparent"
                            SelectionChanged="OperacjeListView_SelectionChanged">

                            <ListView.ItemContainerStyle>
                                <Style
                                    TargetType="ListViewItem">
                                    <Setter
                                        Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                    <Setter
                                        Property="Padding"
                                        Value="0" />
                                    <Setter
                                        Property="MaxWidth"
                                        Value="620" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate
                                    x:DataType="models:Operation">

                                    <Grid
                                        Background="Transparent"
                                        RightTapped="Grid_RightTapped"
                                        DragStarting="Grid_DragStarting">

                                        <FlyoutBase.AttachedFlyout>

                                            <MenuFlyout
                                                MenuFlyoutPresenterStyle="{StaticResource MyMenyFlyoutPresenter}">

                                                <MenuFlyoutItem
                                                    x:Name="DetailsButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xEA55;"
                                                    Text="Szczegóły"
                                                    Click="DetailsButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="EditButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE104;"
                                                    Text="Edytuj"
                                                    Click="EditButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="DeleteButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE107;"
                                                    Text="Usuń"
                                                    Click="DeleteButton_Click" />

                                            </MenuFlyout>

                                        </FlyoutBase.AttachedFlyout>

                                        <data:OperationTemplate />

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <ItemsStackPanel
                                                Margin="0"
                                                GroupPadding="0" />
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                    <GroupStyle.HeaderContainerStyle>
                                        <Style
                                            TargetType="ListViewHeaderItem">
                                            <Setter
                                                Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate
                                                        TargetType="ListViewHeaderItem">

                                                        <ContentPresenter
                                                            x:Name="ContentPresenter"
                                                            Margin="0"
                                                            Padding="0"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.HeaderContainerStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>

                                            <Grid
                                                Background="Transparent"
                                                BorderBrush="#353535"
                                                BorderThickness="0,0,0,1"
                                                MaxWidth="620"
                                                Margin="0,20,0,0">
                                                <Grid
                                                    Margin="0,5"
                                                    MaxWidth="620">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition
                                                            Width="Auto" />
                                                        <ColumnDefinition
                                                            Width="*" />
                                                        <ColumnDefinition
                                                            Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        Margin="15,0">
                                                        <Grid
                                                            Width="50"
                                                            Height="30">
                                                            <FontIcon
                                                                Grid.Column="0"
                                                                Opacity="0.5"
                                                                FontFamily="{Binding iconStyle}"
                                                                Glyph="{Binding icon}"
                                                                FontSize="16" />
                                                        </Grid>

                                                        <TextBlock
                                                            Opacity="0.5"
                                                            Margin="15,0"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Key}"
                                                            FontSize="13" />

                                                    </StackPanel>

                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        Grid.Column="2"
                                                        Name="SumText"
                                                        HorizontalAlignment="Right"
                                                        Text="{Binding cost}"
                                                        Opacity="0.5"
                                                        FontWeight="Bold"
                                                        FontSize="13"
                                                        Margin="16,0" />
                                                </Grid>

                                            </Grid>

                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </SemanticZoom.ZoomedInView>

                    <SemanticZoom.ZoomedOutView>
                        <ListView
                            Name="OperacjeListViewCategorizedGroup"
                            Padding="0,0,0,48"
                            ItemsSource="{x:Bind CategorizedCVS.View.CollectionGroups}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectionMode="Single"
                            DataContextChanged="ListView_DataContextChanged">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,10">
                                        <Grid
                                            Width="50"
                                            Height="50">
                                            <Rectangle
                                                RadiusX="5"
                                                RadiusY="5"
                                                Fill="{Binding Group.color}" />
                                            <FontIcon
                                                Grid.Column="0"
                                                FontFamily="Segoe UI"
                                                Glyph="{Binding Group.icon}"
                                                FontSize="24" />
                                        </Grid>

                                        <TextBlock
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding Group.Key}"
                                            FontSize="16" />

                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>
            </PivotItem>

        </Pivot>

    </Grid>

</Page>
