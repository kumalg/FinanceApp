<Page
    x:Class="Finanse.Pages.Strona_glowna"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Finanse"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Finanse.Elements"
    xmlns:models="using:Finanse.Models"
    mc:Ignorable="d">
    
    <Page.Resources>
        <!--Use a collection view source for content that presents a list of items that can be grouped or sorted.-->
        
        <CollectionViewSource
            x:Name="ContactsCVS"
            IsSourceGrouped="True" />
        <CollectionViewSource
            x:Name="CategorizedCVS"
            IsSourceGrouped="True" />
      
    </Page.Resources>

    <Grid
        Background="Transparent">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState
                    x:Name="HamburgerTight">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="UpperCommandBar.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="UpperPrevMonth.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="UpperNextMonth.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="LowerCommandBar.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="FakeHamburgerButton.Width"
                            Value="48" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState
                    x:Name="HamburgerWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="540" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="FakeHamburgerButton.Width"
                            Value="Auto" />
                        <Setter
                            Target="UpperCommandBar.Visibility"
                            Value="Visible" />

                        <Setter
                            Target="UpperPrevMonth.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="UpperNextMonth.Visibility"
                            Value="Collapsed" />
                        <!--
                        <Setter
                            Target="UpperPrevMonth.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="UpperNextMonth.Visibility"
                            Value="Visible" />
                        -->
                        <Setter
                            Target="OperacjeListView.Padding"
                            Value="0,-10,0,0" />
                        <Setter
                            Target="OperacjeListViewCategorized.Padding"
                            Value="0,-10,0,0" />
                        <Setter
                            Target="OperacjeListViewGroup.Padding"
                            Value="0" />
                        <Setter
                            Target="OperacjeListViewCategorizedGroup.Padding"
                            Value="0" />
                        <Setter
                            Target="LowerCommandBar.Visibility"
                            Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        
        <Grid
            Background="{StaticResource AccentColorStyle}"
            Height="48">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Name="FakeHamburgerButton"
                Width="48" />

            <StackPanel Orientation="Horizontal"
                        Grid.Column="1">
                <FontIcon
                    Name="UpperPrevMonth"
                    Glyph=""
                    FontSize="15"
                    Margin="0,0,10,0"
                    Foreground="{StaticResource AccentTextColorStyle}" />
                <TextBlock
                    x:Name="ActualMonthText"
                    Text="Wrzesień"
                    Style="{StaticResource PageTitleStyle}" 
                    Margin="0"/>
                <FontIcon
                    Name="UpperNextMonth"
                    Glyph=""
                    FontSize="15"
                    Margin="10,0,0,0"
                    Foreground="{StaticResource AccentTextColorStyle}" />
            </StackPanel>

            <StackPanel
                Orientation="Horizontal"
                Grid.Column="3"
                VerticalAlignment="Center">
                <TextBlock
                    VerticalAlignment="Center"
                    Name="ActualMoneyBar"
                    Foreground="{StaticResource AccentTextColorStyle}"
                    FontWeight="Bold"
                    FontSize="14" />
                <Button
                    Margin="11,0"
                    Padding="5"
                    Background="Transparent"
                    VerticalAlignment="Center">
                    <Button.Content>
                        <FontIcon
                            Opacity="0.5"
                            FontSize="13"
                            Glyph="" />
                    </Button.Content>
                    <Button.Flyout>
                        <MenuFlyout
                            Placement="Bottom">
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style
                                    TargetType="MenuFlyoutPresenter">
                                    <Setter
                                        Property="BorderThickness"
                                        Value="0" />
                                    <Setter
                                        Property="Background"
                                        Value="{StaticResource AccentColorStyle}" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <ToggleMenuFlyoutItem
                                Text="Wszystko" />
                            <ToggleMenuFlyoutItem
                                Text="Gotówka" />
                            <ToggleMenuFlyoutItem
                                Text="Karta Visa" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
            
            <StackPanel
                Name="UpperCommandBar"
                Orientation="Horizontal"
                Grid.Column="4">

                <AppBarSeparator
                    IsCompact="True"
                    Foreground="{StaticResource AccentTextColorStyle}"
                    Opacity="0.4" />

                <AppBarButton
                    Icon="Add"
                    IsCompact="True"
                    Label="Nowa operacja"
                    Foreground="{StaticResource AccentTextColorStyle}"
                    Click="NowaOperacja_Click" />

            </StackPanel>
        </Grid>
       
        <Pivot
            Grid.Row="1"
            Grid.RowSpan="2"
            Style="{StaticResource PivotStyle}">

            <Pivot.Resources>
                <Style
                    TargetType="PivotHeaderItem"
                    BasedOn="{StaticResource PivotHeaderItemStyle}" />
            </Pivot.Resources>

            <PivotItem
                Margin="0"
                GotFocus="PivotItem_GotFocus">
                <PivotItem.Header>
                    <data:PivotHeader
                        Label="Wszystkie operacje"
                        Glyph="" />
                </PivotItem.Header>

                <SemanticZoom>
                    <SemanticZoom.ZoomedInView>
                        <ListView
                            Padding="0,-10,0,48"
                            Name="OperacjeListView"
                            ItemsSource="{Binding Source={StaticResource ContactsCVS}, Mode=TwoWay}"
                            SelectionMode="Single"
                            BorderThickness="0"
                            Background="Transparent"
                            SelectionChanged="OperacjeListView_SelectionChanged">

                            <ListView.ItemContainerStyle>
                                <Style
                                    TargetType="ListViewItem">
                                    <Setter
                                        Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                    <Setter
                                        Property="Padding"
                                        Value="0" />
                                    <Setter
                                        Property="MaxWidth"
                                        Value="620" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate
                                    x:DataType="models:Operation">

                                    <Grid
                                        Background="Transparent"
                                        RightTapped="Grid_RightTapped"
                                        DragStarting="Grid_DragStarting">

                                        <FlyoutBase.AttachedFlyout>

                                            <MenuFlyout
                                                MenuFlyoutPresenterStyle="{StaticResource MyMenyFlyoutPresenter}">

                                                <MenuFlyoutItem
                                                    x:Name="DetailsButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xEA55;"
                                                    Text="Szczegóły"
                                                    Click="DetailsButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="EditButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE104;"
                                                    Text="Edytuj"
                                                    Click="EditButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="DeleteButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE107;"
                                                    Text="Usuń"
                                                    Click="DeleteButton_Click" />

                                            </MenuFlyout>

                                        </FlyoutBase.AttachedFlyout>
                                        <StackPanel
                                            Background="Transparent">
                                            <data:OperationTemplate />
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderContainerStyle>
                                        <Style
                                            TargetType="ListViewHeaderItem">
                                            <Setter
                                                Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate
                                                        TargetType="ListViewHeaderItem">

                                                        <ContentPresenter
                                                            x:Name="ContentPresenter"
                                                            Padding="0,15,0,0"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.HeaderContainerStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>

                                            <Grid
                                                CornerRadius="5,5,0,0"
                                                Background="Transparent"
                                                BorderBrush="{StaticResource White20%}"
                                                BorderThickness="0,0,0,1"
                                                MaxWidth="620">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition
                                                        Width="Auto" />
                                                    <ColumnDefinition
                                                        Width="*" />
                                                    <ColumnDefinition
                                                        Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel
                                                    Orientation="Horizontal"
                                                    Margin="16,0,0,5">
                                                    <StackPanel
                                                        Width="48">
                                                        <TextBlock
                                                            Text="{Binding dayNum}"
                                                            FontSize="30"
                                                            Opacity="0.8"
                                                            FontWeight="SemiLight"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                                    </StackPanel>
                                                    <StackPanel
                                                        VerticalAlignment="Center"
                                                        Margin="16,0,0,0">
                                                        <TextBlock
                                                            Opacity="0.8"
                                                            Text="{Binding day}"
                                                            FontSize="12" />
                                                        <TextBlock
                                                            Text="{Binding month}"
                                                            FontSize="12"
                                                            Opacity="0.5" />
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Grid.Column="2"
                                                    Name="SumText"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding cost}"
                                                    FontWeight="Bold"
                                                    Opacity="0.5"
                                                    FontSize="13"
                                                    Margin="16,0" />
                                            </Grid>

                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </SemanticZoom.ZoomedInView>

                    <SemanticZoom.ZoomedOutView>
                        <ListView
                            Name="OperacjeListViewGroup"
                            Padding="0,0,0,48"
                            ItemsSource="{x:Bind ContactsCVS.View.CollectionGroups}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectionMode="Single"
                            DataContextChanged="ListView_DataContextChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        Margin="0,10">
                                        <TextBlock
                                            Text="{Binding Group.dayNum}"
                                            FontSize="30"
                                            FontWeight="SemiLight"
                                            VerticalAlignment="Center" />
                                        <StackPanel
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0">
                                            <TextBlock
                                                Text="{Binding Group.day}"
                                                FontSize="12" />
                                            <TextBlock
                                                Text="{Binding Group.month}"
                                                FontSize="12"
                                                Opacity="0.4" />
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>

            </PivotItem>

            <PivotItem
                Margin="0">
                <PivotItem.Header>
                    <data:PivotHeader
                        Label="Skategoryzowane operacje"
                        Glyph="" />
                </PivotItem.Header>
                <SemanticZoom>
                    <SemanticZoom.ZoomedInView>
                        <ListView
                            Padding="0,-10,0,48"
                            Name="OperacjeListViewCategorized"
                            ItemsSource="{x:Bind CategorizedCVS.View}"
                            SelectionMode="Single"
                            BorderThickness="0"
                            Background="Transparent"
                            SelectionChanged="OperacjeListView_SelectionChanged">

                            <ListView.ItemContainerStyle>
                                <Style
                                    TargetType="ListViewItem">
                                    <Setter
                                        Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                    <Setter
                                        Property="Padding"
                                        Value="0" />
                                    <Setter
                                        Property="MaxWidth"
                                        Value="620" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate
                                    x:DataType="models:Operation">

                                    <Grid
                                        Background="Transparent"
                                        RightTapped="Grid_RightTapped"
                                        DragStarting="Grid_DragStarting">

                                        <FlyoutBase.AttachedFlyout>

                                            <MenuFlyout
                                                MenuFlyoutPresenterStyle="{StaticResource MyMenyFlyoutPresenter}">

                                                <MenuFlyoutItem
                                                    x:Name="DetailsButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xEA55;"
                                                    Text="Szczegóły"
                                                    Click="DetailsButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="EditButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE104;"
                                                    Text="Edytuj"
                                                    Click="EditButton_Click" />

                                                <MenuFlyoutItem
                                                    x:Name="DeleteButton"
                                                    Style="{StaticResource MyMenuFlyoutItem}"
                                                    Tag="&#xE107;"
                                                    Text="Usuń"
                                                    Click="DeleteButton_Click" />

                                            </MenuFlyout>

                                        </FlyoutBase.AttachedFlyout>

                                        <data:OperationTemplate />

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <ItemsStackPanel
                                                Margin="0"
                                                GroupPadding="0" />
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                    <GroupStyle.HeaderContainerStyle>
                                        <Style
                                            TargetType="ListViewHeaderItem">
                                            <Setter
                                                Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate
                                                        TargetType="ListViewHeaderItem">

                                                        <ContentPresenter
                                                            x:Name="ContentPresenter"
                                                            Margin="0"
                                                            Padding="0"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.HeaderContainerStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>

                                            <Grid
                                                Background="Transparent"
                                                BorderBrush="#353535"
                                                BorderThickness="0,0,0,1"
                                                MaxWidth="620"
                                                Margin="0,20,0,0">
                                                <Grid
                                                    Margin="0,5"
                                                    MaxWidth="620">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition
                                                            Width="Auto" />
                                                        <ColumnDefinition
                                                            Width="*" />
                                                        <ColumnDefinition
                                                            Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        Margin="15,0">
                                                        <Grid
                                                            Width="50"
                                                            Height="30">
                                                            <FontIcon
                                                                Grid.Column="0"
                                                                Opacity="0.5"
                                                                FontFamily="{Binding iconStyle}"
                                                                Glyph="{Binding icon}"
                                                                FontSize="16" />
                                                        </Grid>

                                                        <TextBlock
                                                            Opacity="0.5"
                                                            Margin="15,0"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Key}"
                                                            FontSize="13" />

                                                    </StackPanel>

                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        Grid.Column="2"
                                                        Name="SumText"
                                                        HorizontalAlignment="Right"
                                                        Text="{Binding cost}"
                                                        Opacity="0.5"
                                                        FontWeight="Bold"
                                                        FontSize="13"
                                                        Margin="16,0" />
                                                </Grid>

                                            </Grid>

                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </SemanticZoom.ZoomedInView>

                    <SemanticZoom.ZoomedOutView>
                        <ListView
                            Name="OperacjeListViewCategorizedGroup"
                            Padding="0,0,0,48"
                            ItemsSource="{x:Bind CategorizedCVS.View.CollectionGroups}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectionMode="Single"
                            DataContextChanged="ListView_DataContextChanged">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,10">
                                        <Grid
                                            Width="50"
                                            Height="50">
                                            <Rectangle
                                                RadiusX="5"
                                                RadiusY="5"
                                                Fill="{Binding Group.color}" />
                                            <FontIcon
                                                Grid.Column="0"
                                                FontFamily="Segoe UI"
                                                Glyph="{Binding Group.icon}"
                                                FontSize="24" />
                                        </Grid>

                                        <TextBlock
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding Group.Key}"
                                            FontSize="16" />

                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>
            </PivotItem>

            <PivotItem>
                <PivotItem.Header>
                    <data:PivotHeader
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Width="Auto"
                        Label="Statystyki"
                        Glyph="" />
                </PivotItem.Header>
gggg
            </PivotItem>
            
        </Pivot>

        <CommandBar
            Name="LowerCommandBar"
            Grid.Row="2"
            Background="{StaticResource DarkGreyTransparentColorStyle}"
            Foreground="White">

            <AppBarButton
                x:Name="PrevMonthButton"
                Icon="Back"
                Label="Poprzedni miesiąc"
                Foreground="White"
                Click="PreviousMonthButton_Click">
            </AppBarButton>

            <AppBarButton
                x:Name="NextMonthButton"
                Icon="Forward"
                Label="Nastepny miesiąc"
                Foreground="White"
                Click="NextMonthButton_Click">
            </AppBarButton>

            <AppBarSeparator />

            <AppBarButton
                Icon="Add"
                Label="Nowa operacja"
                Foreground="White"
                Click="NowaOperacja_Click">
            </AppBarButton>

        </CommandBar>

    </Grid>

</Page>
