<UserControl
    x:Class="Finanse.Elements.OperationTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Finanse"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="68">

    <Grid
        MaxWidth="600"
        Margin="16,0"
        DataContextChanged="Operation_DataContextChanged">

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Height="48"
            Width="48">

            <Ellipse
                Fill="{StaticResource Background+2}"
                Name="Ellipse_OperationTemplate">
            </Ellipse>
            <Ellipse
                Name="MoneyAccountEllipse"
                Visibility="Collapsed"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Stroke="{ThemeResource Background}"
                StrokeThickness="4"
                Fill="{StaticResource RedColorStyle}"
                Width="14"
                Height="14" />
            <!--
            <Rectangle
                RadiusX="5"
                RadiusY="5"
                Name="Ellipse_OperationTemplate"  />
-->
            <FontIcon
                Name="Icon_OperationTemplate"
                FontSize="24"
                Glyph="{Binding Source={StaticResource DefaultEllipseIcon}, Path=Text}"
                FontFamily="Segoe UI Symbol"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="White" />
        </Grid>
        <Border
            Margin="16,0,0,0"
            Grid.Column="1"
            BorderBrush="{StaticResource White20%}"
            BorderThickness="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    VerticalAlignment="Center">

                    <TextBlock
                        Name="Title_OperationTemplate"
                        Text="{x:Bind Operation.Title}"
                        Foreground="{ThemeResource Text}"
                        TextWrapping="Wrap"
                        FontSize="16" />

                    <StackPanel
                        Visibility="Collapsed"
                        Orientation="Horizontal"
                        Opacity="0.4">
                        <TextBlock
                            Name="Category_OperationTemplate"
                            FontWeight="Bold"
                            FontSize="12"
                            Foreground="White" />
                        <TextBlock
                            Name="SubCategory_OperationTemplate"
                            FontSize="12"
                            Foreground="White" />
                    </StackPanel>

                </StackPanel>
                <TextBlock
                    FontSize="13"
                    Grid.Column="1"
                    Name="Cost_OperationTemplate"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="{StaticResource RedColorStyle}" />
            </Grid>
        </Border>
    </Grid>

</UserControl>
