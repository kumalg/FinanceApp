<Page
    x:Class="Finanse.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Finanse"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Finanse.Elements"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="SplitViewIconStyle">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SplitViewTitleStyle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="32,0,0,0"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="{StaticResource GreyColorStyle}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='1' x:Name="HamburgerTight">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.DisplayMode" Value="Overlay"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='2' x:Name="HamburgerWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.DisplayMode" Value="CompactOverlay"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Początek Hamburger Menu -->
        <Button x:ConnectionId='3' Name="HamburgerButton"
                Height="48"
                Width="48"
                BorderThickness="0"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE700;"
                FontSize="16"
                                             
                Background="{StaticResource BlueColorStyle}"
                Canvas.ZIndex="3"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Foreground="White"/>

        <SplitView x:ConnectionId='4' Name="MySplitView"
                   Grid.Row="0"
                   DisplayMode="Overlay"
                   OpenPaneLength="250"
                   CompactPaneLength="48"
                   HorizontalAlignment="Left"
                   PaneBackground="Transparent"
                   Canvas.ZIndex="2">
            <SplitView.Pane>
                <ListBox x:ConnectionId='5' Name="IconsListBox"
                         BorderThickness="0"
                         SelectionMode="Single"
                                                                         
                         Foreground="White"
                         Background="{StaticResource LightGreyTransparentColorStyle}"
                         SelectedIndex="0">
                    <ListBoxItem x:ConnectionId='6' Name="Strona_glowna_ListBoxItem"
                                 Margin="0,48,0,0"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE80F;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Moje finanse" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='7' Name="Kategorie_ListBoxItem"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE71D;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Kategorie" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='8' Name="Szablony_ListBoxItem"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE74C;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Szablony" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='9' Name="ZleceniaStale_ListBoxItem"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE81C;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Zlecenia stałe" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='10' Name="PlanowaneWydatki_ListBoxItem"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE823;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Planowane wydatki" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='11' Name="Ustawienia_ListBoxItem"
                                 Height="48">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SplitViewIconStyle}"
                                       Text="&#xE713;"/>
                            <TextBlock Style="{StaticResource SplitViewTitleStyle}"
                                       Text="Ustawienia" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='12' Name="AktualnaStrona_Frame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

