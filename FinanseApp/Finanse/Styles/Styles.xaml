                                            VerticalAlignment="Stretch" />
                                        <ContentControl
                                            x:Name="HeaderClipper"
                                            Grid.Column="1"
                                            HorizontalContentAlignment="Stretch"
                                            UseSystemFocusVisuals="True">
                                            <ContentControl.Clip>
                                                <RectangleGeometry
                                                    x:Name="HeaderClipperGeometry" />
                                            </ContentControl.Clip>
                                            <Grid
