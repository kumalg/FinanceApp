    <Style
        x:Key="HamburgerRadioButton"
        TargetType="RadioButton">
        <Setter
            Property="Background"
            Value="Transparent" />
        <Setter
            Property="HorizontalAlignment"
            Value="Stretch" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalContentAlignment"
            Value="Left" />
        <Setter
            Property="VerticalContentAlignment"
            Value="Top" />
        <Setter
            Property="FontFamily"
            Value="{ThemeResource ContentControlThemeFontFamily}" />
        <Setter
            Property="FontSize"
            Value="{ThemeResource ControlContentThemeFontSize}" />
        <Setter
            Property="MinWidth"
            Value="120" />
        <Setter
            Property="UseSystemFocusVisuals"
            Value="True" />
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="RadioButton">
                    <Grid
                        x:Name="HamburgerRadioButtonGrid"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="48" />
                            <ColumnDefinition
                                Width="*" />
                        </Grid.ColumnDefinitions>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup
                                x:Name="CommonStates">
                                <VisualState
                                    x:Name="Normal">
                                </VisualState>
                                <VisualState
                                    x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter
                                            Target="HamburgerRadioButtonGrid.(Panel.Background)"
                                            Value="{StaticResource GreyColorStyle}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState
                                    x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter
                                            Target="HamburgerRadioButtonGrid.(Panel.Background)"
                                            Value="{StaticResource AccentColorStyle}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup
                                x:Name="CheckStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition
                                        From="Checked"
                                        GeneratedDuration="0:0:0.2"
                                        To="Unchecked">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="HamburgerIcon"
                                                To="{Binding Source={StaticResource AccentTransparentTextColorStyle},Path=Color}"
                                                Duration="0:0:0.2"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" />
                                            <DoubleAnimation
                                                Duration="0:0:0.2"
                                                To="0"
                                                Storyboard.TargetProperty="(UIElement.Opacity)"
                                                Storyboard.TargetName="HoverBorder" />
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState
                                    x:Name="Checked">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="HamburgerIcon"
                                            To="{Binding Source={StaticResource AccentColorStyle},Path=Color}"
                                            Duration="0:0:0.2"
                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" />
                                        <DoubleAnimation
                                            Duration="0:0:0.2"
                                            To="1"
                                            Storyboard.TargetProperty="(UIElement.Opacity)"
                                            Storyboard.TargetName="HoverBorder"
                                            d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState
                                    x:Name="Unchecked">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Duration="0"
                                            To="0"
                                            Storyboard.TargetProperty="(UIElement.Opacity)"
                                            Storyboard.TargetName="HoverBorder"
                                            d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState
                                    x:Name="Indeterminate" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid
                            Height="48"
                            VerticalAlignment="Top">
                            <StackPanel
                                x:Name="HoverBorder"
                                Width="3"
                                Height="24"
                                HorizontalAlignment="Left"
                                Background="{StaticResource AccentColorStyle}" />
                            <FontIcon
                                x:Name="HamburgerIcon"
                                FontSize="16"
                                Foreground="{StaticResource AccentTransparentTextColorStyle}"
                                Glyph="{TemplateBinding Tag}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
                        </Grid>
                        <TextBlock
                            FontSize="14"
                            x:Name="ContentPresenter"
                            AutomationProperties.AccessibilityView="Raw"
                            Text="{TemplateBinding Content}"
                            Grid.Column="1"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

