                            Width="96"
                            VerticalAlignment="Center">
                            <StackPanel
                                x:Name="HoverBorder"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                <Ellipse
                                    Width="6"
                                    Height="6"
                                    VerticalAlignment="Center"
                                    Fill="{ThemeResource AccentColor}" />
                            </StackPanel>
                            <FontIcon
                                x:Name="HamburgerIcon"
