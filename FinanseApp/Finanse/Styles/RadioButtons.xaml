                                Foreground="{ThemeResource Text-2}"
                                FontFamily="{TemplateBinding FontFamily}"
                                Glyph="{TemplateBinding Tag}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
                        </Grid>

                        <ContentPresenter
