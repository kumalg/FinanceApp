<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:Finanse.Converters"
    xmlns:charts="using:Finanse.Charts">

    <DataTemplate
        x:Key="DoughnutChartItemTemplate">
        <charts:DoughnutChartItem
            Value="{Binding Part}"
            Color="{Binding Brush.Color, Mode=OneWay}" />
    </DataTemplate>

    <conv:DecimalToCurrencyStringConverter
        x:Name="DecimalToCurrencyStringConverter" />

    <conv:DoubleToPercentStringConverter
        x:Name="DoubleToPercentStringConverter" />
    
    <conv:ColorToBrushConverter
        x:Name="ColorToBrushConverter" />

    <DataTemplate
        x:Key="LegendItemTemplate">
        <Grid
            VerticalAlignment="Center"
            Margin="8"
            Width="256">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="32" />
                <ColumnDefinition
                    Width="3*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Ellipse
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="16"
                Height="16"
                Stroke="{Binding Brush}"
                StrokeThickness="2" />
            <TextBlock
                Grid.Column="1"
                FontSize="13"
                Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}"
                Opacity="0.75"
                VerticalAlignment="Center"
                FontFamily="{StaticResource DefaultFontFamily}"
                Text="{Binding Name}" />
            <TextBlock
                Grid.Column="1"
                FontSize="13"
                HorizontalAlignment="Right"
                Foreground="{ThemeResource AccentColor}"
                VerticalAlignment="Center"
                FontFamily="{StaticResource DefaultFontFamily}"
                Text="{Binding Value, Converter={StaticResource DecimalToCurrencyStringConverter}}" />
            <TextBlock
                Grid.Column="3"
                FontSize="13"
                Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}"
                Opacity="0.5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontFamily="{StaticResource DefaultFontFamily}"
                Text="{Binding Part, Converter={StaticResource DoubleToPercentStringConverter}}" />
        </Grid>
    </DataTemplate>

    <DataTemplate
        x:Key="LegendThinItemTemplate">
        <Grid
            VerticalAlignment="Center"
            Margin="4"
            Width="128">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="32" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Ellipse
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="12"
                Height="12"
                Stroke="{Binding Brush}"
                StrokeThickness="2" />
            <TextBlock
                Grid.Column="1"
                FontSize="13"
                Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}"
                Opacity="0.75"
                VerticalAlignment="Center"
                FontFamily="{StaticResource DefaultFontFamily}"
                TextWrapping="Wrap"
                Text="{Binding Name}" />
            <TextBlock
                Grid.Column="1"
                Grid.Row="1"
                FontSize="13"
                HorizontalAlignment="Left"
                Foreground="{ThemeResource AccentColor}"
                VerticalAlignment="Center"
                FontFamily="{StaticResource DefaultFontFamily}"
                Text="{Binding Value, Converter={StaticResource DecimalToCurrencyStringConverter}}" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>
