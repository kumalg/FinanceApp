        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState
                    x:Name="WindowCompact">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="CommandBar.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="ThirdColumnDefinition.Width" 
                            Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState
                    x:Name="WindowWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="Pane.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="ThirdColumnDefinition.Width"
                            Value="0" />
                    </VisualState.Setters>
                </VisualState>
