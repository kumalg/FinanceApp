                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="Pane.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="ThirdColumnDefinition.Width"
                            Value="*" />
                    </VisualState.Setters>
                </VisualState>
                -->
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

