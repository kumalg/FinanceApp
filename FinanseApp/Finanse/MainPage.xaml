                        Grid.Column="1"
                        FontFamily="{StaticResource FontAwesome}"
                        Tag=""
                        Click="OperationsAppBarRadioButton_Click"
                        Checked="OperationsAppBarRadioButton_Checked">
                        <TextBlock Text="Operacje" x:Uid="operations" />
                    </RadioButton>
                    <RadioButton
